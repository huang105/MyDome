<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bwei.huanghui.headdomes2.HomeActivity">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tad1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/home_tab"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/ziti_color" />

        <RadioButton
            android:id="@+id/tad2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/vcover_tab"
            android:gravity="center"
            android:text="视频"
            android:textColor="@drawable/ziti_color" />

        <RadioButton
            android:id="@+id/tad3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/toutiao_tab"
            android:gravity="center"
            android:text="微头条"
            android:textColor="@drawable/ziti_color" />

        <RadioButton
            android:id="@+id/tad4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/login_tab"
            android:gravity="center"
            android:text="未登录"
            android:textColor="@drawable/ziti_color" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/con_fragmnet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/radio_group"></FrameLayout>
</RelativeLayout>
